<section>
  <div class="container">
    <h1>Cadastro de Produto</h1>
    <form id="evento-form">
      <div>
        <div class="form-group">
          <label for="eventoNome" class="form-label">Nome</label>
          <input
            type="text"
            class="form-control"
            id="eventoNome"
            name="eventoNome"
            placeholder="Nome do Evento"
          />
        </div>
      </div>
      <div>
        <div class="form-group">
          <label for="eventoData" class="form-label">Data</label>
          <input
            type="date"
            class="form-control"
            id="eventoData"
            name="eventoData"
          />
        </div>
      </div>
      <div>
        <div class="form-group">
          <label for="eventoStatusId" class="form-label">Status:</label>
          <select
            class="form-select"
            id="eventoStatusId"
            name="eventoStatusId"
          >
            <option selected value="0">Selecione...</option>
            <% eventoStatus.forEach(status => { %>
            <option value="<%= status.eventoStatusId %>">
              <%= status.eventoStatusDescricao %>
            </option>
            <% }) %>
          </select>
        </div>
      </div>
      <div class="mt-4">
        <a class="btn btn-secondary" href="/eventos">Voltar</a>
        <button class="btn btn-primary" type="submit">Cadastrar</button>
      </div>
    </form>
  </div>
</section>

<script src="/js/eventos/cadastro.js"></script>
